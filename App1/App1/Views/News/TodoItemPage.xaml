<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 			 x:Class="App1.Views.News.TodoItemPage" 
       x:Title="Hello XAML Page">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

        <Image  Source="{Binding Path=image}" WidthRequest="640" />
        <Label Text="{Binding  Path=name}" TextColor="Aqua" FontSize="Large" />
        <Label Text="{Binding  Path=preview}" TextColor="Aqua"  />
        <WebView x:Name="Browser"  HeightRequest="500" HorizontalOptions="FillAndExpand" />
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>


</ContentPage> 
