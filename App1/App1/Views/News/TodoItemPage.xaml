<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 			 x:Class="App1.Views.News.TodoItemPage" 
       x:Title="Hello XAML Page">
  <ContentPage.Content>
      <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Image  Source="{Binding Path=image}"  Aspect="AspectFill" />
        <Label Text="{Binding  Path=name}"  FontSize="Large" />
        
        <WebView x:Name="Browser"  HeightRequest="500" HorizontalOptions="FillAndExpand" />
      </StackLayout>
   
  </ContentPage.Content>


</ContentPage> 
