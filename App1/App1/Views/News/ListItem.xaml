<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.News.ListItem">
  <ListView x:Name="NewsItemList"  SeparatorColor="Green"  ItemSelected="OnSelection">
   
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell >
          <StackLayout WidthRequest="640"  VerticalOptions="LayoutOptions.FillAndExpand" HorizontalOptions="LayoutOptions.FillAndExpand">

          <Image  Source="{Binding image}"  /> 
          <Label Text="{Binding name}" TextColor="Aqua" FontSize="Large" />
            <Label Text="{Binding preview}" TextColor="Aqua"  />
          </StackLayout>
        </ViewCell>

      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>