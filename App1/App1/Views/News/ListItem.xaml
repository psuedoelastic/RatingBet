<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.News.ListItem">
  <ListView x:Name="NewsItemList"  SeparatorColor="Green"  ItemSelected="OnSelection">
   
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          						<StackLayout Padding="20,0,0,0" HorizontalOptions="StartAndExpand" Orientation="Horizontal">
            							<Label Text="{Binding ID}" VerticalTextAlignment="Center" />
                        <Label Text="{Binding content}" VerticalTextAlignment="Center" />
          </StackLayout>
        </ViewCell>

      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>